<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDBF70">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCalc"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E8DA8A00"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="284dp"
        android:layout_height="173dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="344dp"
        android:src="@drawable/zakat_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/toolbarCalc"
        android:layout_marginTop="279dp"
        android:layout_marginBottom="116dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/calculator_button"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:background="#E8DA8A00"
            android:text="Calculator"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/about_button"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#E8DA8A00"
            android:text="About"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/instruction_button"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#E8DA8A00"
            android:text="Instruction tips"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>
